<%= simple_form_for @book, url: authors_book_path(@book) do |f| %>
<%= f.input :title %>
<%= f.input :synopsys%>
<%= f.input :genre %>
<%= f.input :cover_pic, placehoder: :cover_pic_cache %>
<%= f.input :publisher %>
<%= f.input :publication_year, as: :date, start_year: Date.today.year - 90,
end_year: Date.today.year,
order: [:year] %>
<%= f.input :price %>
<%= f.button :submit, data: {confirm: "do you like the edit?"}, class:"btn btn-danger" %>
<% end %>
