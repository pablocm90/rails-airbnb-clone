<div class="navbar-book">
  <!-- Logo -->
  <a href="/" class="navbar-book-brand">
    <%= image_tag "book_logo.svg", id: "logo" %>
  </a>

  <!-- Right Navigation -->
  <div class="navbar-book-right hidden-xs hidden-sm">



    <!-- Profile picture with dropdown list -->
    <% if current_user %>
    <!-- <a href="#" class="navbar-book-item navbar-book-link">Become an author</a> -->
    <%= link_to "Become an author", new_authors_path, class: 'navbar-book-item navbar-book-link' %>

    <div class="navbar-book-item">
      <div class="dropdown">
        <img src="https://kitt.lewagon.com/placeholder/users/lynnvanderhallen" class="avatar dropdown-toggle" id="navbar-book-menu" data-toggle="dropdown">
        <ul class="dropdown-menu dropdown-menu-right navbar-book-dropdown-menu">
          <li><a href="#">Profile</a></li>
          <li><a href="#">Dashboard</a></li>
          <li><%= link_to "Log out", destroy_user_session_path, method: :delete %></li>
        </ul>
      </div>
    </div>

    <% else  %>
      <%= link_to "Sign up", new_user_registration_path, class: 'navbar-book-item navbar-book-link' %>
      <%= link_to "Log in", user_session_path, class: 'navbar-book-item navbar-book-link' %>
    <% end %>
  </div>

  <!-- Dropdown appearing on mobile only -->
  <div class="navbar-book-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-book-dropdown-menu">
       <li> <%= link_to "Sign up", new_user_registration_path, class: 'navbar-book-item navbar-book-link' %></li>
        <li><%= link_to "Log in", user_session_path, class: 'navbar-book-item navbar-book-link' %></li>

        <li><a href="#">Become an author</a></li>
        <li><a href="#">Profile</a></li>
        <li><a href="#">Dashboard</a></li>
      </ul>
    </div>
  </div>
</div>
