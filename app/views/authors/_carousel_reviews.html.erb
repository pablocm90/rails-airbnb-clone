      <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
          <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
          <%= (@author.reviews.count - 1).times do %>
          <% number = 1 %>
          <li data-target="#carousel-example-generic" data-slide-to="<%= number %>"></li>
          <% number += 1 %>
          <% end %>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
          <div class="item active">
            <img src="<%= cl_image_path @author.reviews.first.book %>" alt="">
            <div class="carousel-caption">
              <%= @author.reviews.first.rating %>
              <%= @author.reviews.first.content %>
            </div>
          </div>
          <div class="item">
            <img src="..." alt="...">
            <div class="carousel-caption">
             <p>something else</p>
            </div>
          </div>
          ...
        </div>
      </div>
