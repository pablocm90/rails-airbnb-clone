<% if current_user != @author.user.username %>


<div class="container margin-top-50 author-card">
  <div class="row">
    <div class="col-xs-12 col-sm-6">
      <div class="author-pic text-center thumbnail">
        <%= cl_image_tag @author.profile_picture, class: "img-author" %>
      </div>
    </div>

    <div class="col-xs-12 col-sm-6 ">
      <div class="author-info text-center thumbnail">
        <p><b>Name:</b></p>
        <p> <%= @author.user.username %> </p>
        <p><b>Description:</b></p>
        <p> <%= @author.description %> </p>
        <p><b>Birthday:</b></p>
        <p> <%= @author.birthday %> </p>



      </div>
      <%= render 'carousel_books' %>
    </div>
  </div>
  <% if @author == current_author %>
  <%= link_to "edit profile", edit_authors_path, class: "btn btn-danger" %>
<% end %>
</div>


<% end %>





